{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentParameters.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "alertName": {
            "value": "High Sustained CPU Utilization Alert"
        },
        "alertDescription": {
            "value": "CPU Utlization has exceeded 80% for greater than 30 minutes"
        },
        "alertSeverity": {
            "value":3
        },
        "isEnabled": {
            "value": true
        },
        "metricName": {
            "value": "Percentage CPU"
        },
        "operator": {
          "value": "GreaterThan"
        },
        "threshold": {
            "value": "80"
        },
        "timeAggregation": {
            "value": "Average"
        },
        "actionGroupId": {
            "value": "/subscriptions/<your subscription ID>/resourceGroups/<your resource group name>/providers/microsoft.insights/actiongroups/<your action group name>"
        }
    }
}